= form_with model:@review[params], class: :form, local: true do |form|
  = form.text_field :title, placeholder: :タイトル, class: :form__title, value: "#{@review.title}"
  = form.text_area :reviewText, placeholder: :感想本文, class: :form__text, value: "#{@review.reviewText}"
  = form.submit '投稿'

